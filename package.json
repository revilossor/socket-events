{
  "name": "revilossor-socket-events-monorepo",
  "version": "1.0.0",
  "description": "event sourcing with sockets monorepo",
  "repository": "https://github.com/revilossor/socket-events",
  "scripts": {
    "start": "docker-compose up --build -d",
    "stop": "docker-compose down",
    "lint": "standard",
    "unit": "jest",
    "mutation": "lerna run --stream mutation",
    "preintegration": "npm start && sleep 10",
    "integration": "lerna run --stream --parallel integration",
    "postintegration": "npm stop",
    "audit": "npm audit && lerna exec --stream --parallel npm audit",
    "test": "npm run lint && npm run unit && npm run mutation && npm run integration && npm run audit",
    "watch": "npm run unit -- --watch --collectCoverage=false --verbose=true",
    "postinstall": "lerna bootstrap --hoist",
    "build": "lerna run --stream --parallel build"
  },
  "author": "oliver.ross@hotmail.com",
  "license": "ISC",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-jest": "^24.3.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "newman": "^4.4.0",
    "rollup": "^1.2.3",
    "rollup-plugin-babel": "^4.3.2",
    "standard": "^12.0.1",
    "stryker": "^0.35.1",
    "stryker-api": "^0.24.1",
    "stryker-javascript-mutator": "^0.14.1",
    "stryker-jest-runner": "^1.4.1",
    "supertest": "^3.4.2"
  },
  "engines": {
    "node": "^11.10.0",
    "npm": ">= 6.7.0"
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "globals": [
      "jest",
      "beforeAll",
      "afterAll",
      "describe",
      "it",
      "expect",
      "define"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": false,
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run unit",
      "pre-push": "npm t"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
