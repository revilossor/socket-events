{
  "name": "socket-events",
  "version": "1.0.0",
  "description": "event sourcing with sockets",
  "main": "index.js",
  "scripts": {
    "start": "docker-compose up --build",
    "stop": "docker-compose down",
    "lint": "standard",
    "unit": "jest",
    "mutation": "lerna run --stream mutation",
    "integration": "lerna run --stream integration",
    "audit": "npm audit && lerna exec --stream npm audit",
    "test": "npm run lint && npm run unit && npm run mutation && npm run integration && npm run audit",
    "watch": "npm run unit -- --watch --collectCoverage=false --verbose=true",
    "postinstall": "lerna bootstrap"
  },
  "author": "oliver.ross@hotmail.com",
  "license": "ISC",
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "standard": "^12.0.1",
    "stryker": "^0.35.1",
    "stryker-api": "^0.24.1",
    "stryker-javascript-mutator": "^0.14.1",
    "stryker-jest-runner": "^1.4.1",
    "supertest": "^3.4.2"
  },
  "standard": {
    "ignore": [],
    "globals": [
      "jest",
      "beforeAll",
      "describe",
      "it",
      "expect"
    ]
  },
  "jest": {
    "verbose": false,
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run unit -- --verbose=true --onlyChanged",
      "pre-push": "npm t"
    }
  },
  "lint-staged": {
    "*.js": ["standard --fix", "git add"]
  }
}
